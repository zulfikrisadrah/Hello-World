<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            >

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:background="#9A66F6"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/vesperlibre"
                android:gravity="center"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Hello World"
                android:textSize="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/kavoon"
                android:textColor="#9A66F6"
                >
            </TextView>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:background="@drawable/home_bg"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:src="@drawable/life"
                        >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Life"
                            android:textSize="18dp"
                            android:fontFamily="@font/inter"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/tv_life"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/vesperlibrebold"
                            >
                        </TextView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/coin"
                        >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coin"
                            android:textSize="18dp"
                            android:fontFamily="@font/inter"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/tv_coin"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/vesperlibrebold"
                            >
                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                android:background="@drawable/play_bg"
                android:padding="20dp"
                >
                <LinearLayout
                    android:id="@+id/kota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/kota"
                        android:layout_marginRight="10dp"
                        >
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_level_kota"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Level 199/199"
                        android:textSize="20dp"
                        android:fontFamily="@font/inter"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>

                    <ImageView
                        android:id="@+id/play_kota"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:src="@drawable/play"
                        android:layout_marginLeft="10dp"
                        >
                    </ImageView>

                </LinearLayout>

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="2dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    >
                </ImageView>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/uang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/uang"
                        android:layout_marginRight="10dp"
                        >
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_level_uang"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Level 199/199"
                        android:textSize="20dp"
                        android:fontFamily="@font/inter"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        >
                    </TextView>

                    <ImageView
                        android:id="@+id/play_uang"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:src="@drawable/play"
                        android:layout_marginLeft="10dp"
                        >
                    </ImageView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>