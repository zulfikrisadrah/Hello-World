<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E7FF"
    tools:context=".Activity.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:background="#9A66F6"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_gravity="center"
                >
            </ImageView>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level 1/199"
                android:textSize="30dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/vesperlibre"
                android:gravity="center"
                >
            </TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <LinearLayout
                android:id="@+id/life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:paddingRight="15dp"
                android:layout_toLeftOf="@+id/coin"
                android:background="@drawable/coin_bg"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/life"
                    android:layout_marginHorizontal="10dp"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/tv_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="20dp"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:paddingRight="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/coin_bg"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/coin"
                    android:layout_marginHorizontal="10dp"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="20dp"
                    >
                </TextView>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/games_bg"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="70dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_soal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apa nama ibu kota dari negara United States of America ?"
                android:textSize="30dp"
                android:fontFamily="@font/vesperlibrebold"
                android:paddingHorizontal="15dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                >
            </TextView>

            <LinearLayout
                android:id="@+id/linear_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tv_answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:paddingHorizontal="15dp"
                    android:text="Pilihan 1"
                    android:textSize="16dp"
                    android:fontFamily="@font/vesperlibremedium"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/answer_bg"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:paddingHorizontal="15dp"
                    android:text="Pilihan 2"
                    android:textSize="16dp"
                    android:fontFamily="@font/vesperlibremedium"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/answer_bg"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:paddingHorizontal="15dp"
                    android:text="Pilihan 3"
                    android:textSize="16dp"
                    android:fontFamily="@font/vesperlibremedium"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/answer_bg"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_answer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:paddingHorizontal="15dp"
                    android:text="Pilihan 4"
                    android:textSize="16dp"
                    android:fontFamily="@font/vesperlibremedium"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/answer_bg"
                    >
                </TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>